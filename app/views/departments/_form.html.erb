<%= form_for @department, :html => { :class => "form-horizontal department" } do |f| %>

  <% if @department.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@department.errors.count, "error") %> prohibited this department from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @department.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :coding, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :coding, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :parent, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :parent, :class => 'form-control' %>
    </div>
  </div>
<br />
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                departments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
