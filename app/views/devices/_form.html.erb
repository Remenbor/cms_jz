<%= form_for @device, :html => { :class => "form-horizontal device" } do |f| %>

  <% if @device.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @device.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :model, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :model, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :serial_num, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serial_num, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :buy_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :buy_date, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :age_limit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :age_limit, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :borrower, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :borrower, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :loan_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :loan_date, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :return_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :return_date, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => 'form-control' %>
    </div>
  </div>
<br />
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                devices_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
